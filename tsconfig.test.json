{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "noEmit": true
  },
  "include": [
    "jest.setup.ts",
    "tests/ui/unit/**/*.ts",
    "tests/ui/unit/**/*.tsx",
    "tests/ui/integration/**/*.ts",
    "tests/ui/integration/**/*.tsx",
    "tests/ui/test.helper.tsx",
    "tests/ui/__mocks__/**/*.{ts,tsx,js}",
    "src/ui/app/types",
    "src/ui/types"
  ]
}
